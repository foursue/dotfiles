# 起動時メッセージをオフに変更
startup_message off

# エンコーディングの設定
defkanji utf-8
defencoding utf-8
encoding utf-8 utf-8

# エスケープキーバインドを変更
escape ^j^j

# 画面下部に仮想端末のタブみたいのを表示
#caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
hardstatus alwayslastline '%{= kw}%02c:%s %{= .y}%H %L=%{= .b}%-w%46>%{= .r}%n %t*%{= .b}%+w%-16=%{= .y}[%l]'
caption splitonly "%{= kw}%?%F%{= .r}%:%{= .w}%?%3n %t"

# 中央バーの色
sorendition rw

# 仮想端末のリスト表示するキーバインド
bind l windowlist

